<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title> @ViewBag.Title </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="~/Assets/css/Rstyle.css">

</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="user">
        <header class="user__header">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3219/logo.svg" alt="" />
            <h1 class="user__title">
                You've successfully authenticated with <strong>@ViewBag.LoginProvider</strong>.
                Please enter a user name (email) for new EAW account and click the Register button to finish
                logging in.
            </h1>
        </header>

        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
        {
            @Html.AntiForgeryToken()

            @*<h4>Association Form</h4>*@
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form__group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form__input", @placeholder = "Email..." })
            </div>
            <div class="form__group">
                @Html.TextBoxFor(m => m.Username, new { @class = "form__input", @placeholder = "Username..." })
            </div>
            <div class="form__group">
                @Html.PasswordFor(m => m.Password, new { @class = "form__input", @placeholder = "Password..." })
            </div>
            <div class="form__group" style="color: red">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form__input", @placeholder = "Confirm Password..." })
            </div>
            <button class="btn" type="submit">Register</button>
            @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color: red" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @style = "color: red" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @style = "color: red" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @style = "color: red" })
        }


    </div>
    <!-- partial -->
    <script src="~/Assets/js/Rscript.js"></script>
  
        @Scripts.Render("~/bundles/jqueryval")
   
</body>
</html>